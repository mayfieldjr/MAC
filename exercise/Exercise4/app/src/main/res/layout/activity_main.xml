<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.exercise4.MainActivity">

    <EditText
        android:id="@+id/first_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter First Name"/>
    <EditText
        android:id="@+id/last_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Last Name"/>
    <Button
        android:onClick="saveName"
        android:text="SAVE Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Display First Name"
        android:onClick="showfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="showlname"
        android:text="Display Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Update"
        android:onClick="updater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
